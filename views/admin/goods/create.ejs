<% include ../include/header %>

<section id="center_page_section">
  <div class="centerPageHeader" id="center_body_header" >
    أدخل معلومات الدفعة

  </div><!-- #center_body_header -->

  <div class="block_body"  id="center_body_body">




  <form method="post"  class="form fullPageForm">

      <fieldset>
          <legend>
              المعلومات الأساسية

          </legend>
      <div class="form-group">
                      <label>category</label>

          <div class="input-group">
                      <select type="select" class="form-control  input-sm" name="category"  id="category" ><% var goods_category=arrays("goods","category");%>
    <% for(var key in goods_category){%>
        <option value="<%=key;%>"><%=goods_category[key];%></option>
                          <% } %> </select>
              </div>
                    </div><!-- category -->

      <div class="form-group">
                    <label>title</label>
                    <div class="input-group">
                                
                      <div class="input-group-addon">
                        <i class="fa fa-fw fa-pencil"></i>
                      </div>
                      
                      <input type="text" class="form-control  input-sm" name="title"  value="<%=values.title;%>"  placeholder="title"id="title"  />
                    </div><!-- /.input group -->
                  </div><!-- /.title -->

      <div class="form-group fullRow">


          <label>description</label>

          <div class="input-group">
          <textarea type="textarea" class="form-control  input-sm" name="description"  placeholder="description"id="description"  style="height:150px;" ><%=values.description;%> </textarea>
</div>
      </div><!-- /.description -->
      </fieldset>




      <fieldset>
          <legend>
              المعلومات الأساسية

          </legend>
      <div class="form-group">
                    <label>public_price</label>
                    <div class="input-group">
                                
                      <div class="input-group-addon">
                        <i class="fa fa-fw fa-list-ol"></i>
                      </div>
                      
                      <input type="number" class="form-control  input-sm" name="public_price"  value="<%=values.public_price;%>"  placeholder="public_price"id="public_price"  />
                    </div><!-- /.input group -->
                  </div><!-- /.public price-->

      <div class="form-group">
          <label>earnest</label>
          <div class="input-group">

              <div class="input-group-addon">
                  <i class="fa fa-fw fa-list-ol"></i>
              </div>

              <input type="number" class="form-control  input-sm" name="earnest"  value="<%=values.earnest;%>"  placeholder="earnest"id="earnest"  />
          </div><!-- /.input group -->
      </div><!-- /.earnest -->
</fieldset>




      <fieldset>
          <legend>
معلومات إضافية

          </legend>
      <div class="form-group">
          <label>available_quantity</label>
          <div class="input-group">

              <div class="input-group-addon">
                  <i class="fa fa-fw fa-list-ol"></i>
              </div>

              <input type="integer" class="form-control  input-sm" name="available_quantity"  value="<%=values.available_quantity;%>"  placeholder="available_quantity"id="available_quantity"  />
          </div><!-- /.input group -->
      </div><!-- /.available_quantity -->

      <div class="form-group">
          <label>img</label>
          <div class="input-group">

              <div class="input-group-addon">
                  <i class="fa fa-fw fa-pencil"></i>
              </div>

              <input type="text" class="form-control  input-sm" name="img"  value="<%=values.img;%>"  placeholder="img"id="img"  />
          </div><!-- /.input group -->
      </div><!-- /.image -->
  </fieldset>




      <fieldset>
          <legend>
              الييع بالأقساط
          </legend>
      <div class="form-group">
                    <label>installment_gain</label>
                    <div class="input-group">
                                
                      <div class="input-group-addon">
                        <i class="fa fa-fw fa-list-ol"></i>
                      </div>
                      
                      <input type="number" class="form-control  input-sm" name="installment_gain"  value="<%=values.installment_gain;%>"  placeholder="installment_gain"id="installment_gain"  />
                    </div><!-- /.input group -->
                  </div><!-- /.installment_gain -->


      <div class="form-group">
                      <label>installment_unit</label>

          <div class="input-group">
